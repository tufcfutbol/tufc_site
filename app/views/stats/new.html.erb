<h1> Create a new stat entry for <%= @player.first_name + ' ' + @player.last_name %> </h1>

<% form_for [@player,@stat] do |f| %>

<%= render 'shared/error_messages', :object => @stat %>

<%= f.label :season %>
<%= f.select :season, %w(Fall Spring) %>

<%= f.number_field :year, :value => 2010 %><br />

<%= f.label :goals %>
<%= f.number_field :goals, :value => 0 %>

<%= f.label :assists %>
<%= f.number_field :assists, :value => 0 %><br />

<%= f.label :yellow_cards %>
<%= f.number_field :yellow_cards, :value => 0 %>

<%= f.label :red_cards %>
<%= f.number_field :red_cards, :value => 0 %><br />

<%= f.label :games_played %>
<%= f.number_field :games_played, :value => 0 %><br />

<%= f.label :eboard_position %>
<%= f.text_field :eboard_position %>

<hr class="space" />
<%= f.submit 'Create Stat Entry' %>


<% end %>

