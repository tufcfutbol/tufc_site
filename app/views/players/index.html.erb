<h1>Listing players</h1>

<table>
  <tr>
    <th>First team</th>
    <th>Preffered position</th>
    <th>Rating</th>
    <th>Hometown</th>
    <th>Notes</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.first_team %></td>
    <td><%= player.preffered_position %></td>
    <td><%= player.rating %></td>
    <td><%= player.hometown %></td>
    <td><%= player.notes %></td>
    <td><%= player.first_name %></td>
    <td><%= player.last_name %></td>
    <td><%= player.year %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

