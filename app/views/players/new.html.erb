<h1>Create Player </h1>
<% form_for @player do |f| %>
  <%= render 'shared/error_messages', :object => @player %>

  <div id="personal info" class="span-12">
  <h2>Personal Information</h2>
  <%= f.label :hometown %><br />
  <%= f.text_field :hometown %><br />
  <%= f.label :notes %><br />
  <%= f.text_area :notes %><br />
  This box accepts <%= link_to 'Markdown', 'http://en.wikipedia.org/wiki/Markdown' %><br />
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name %><br />
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name %><br />
  <%= f.label :year, 'Class Of' %><br />
  <%= f.number_field :year, :value => 2012 %><br />
  <%= f.label :email %><br />
  <%= f.text_field :email %>
  </div>
  <div id="player-info" class="span-12 last">
  <h2>Player Information</h2>
  <%= f.label :first_team, 'First Team?' %><br />
  <%= f.check_box :first_team %><hr class="space" />

  <%= f.label :preffered_position %><br />
  <%= f.text_field :preffered_position %><hr class="space" />

  <%= f.label :rating, 'Rating(Between 1 and 10)' %><br />
  <%= f.number_field :rating %><hr class="space" />
  </div>

  <%= f.submit %>
<% end %>

